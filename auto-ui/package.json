{
  "name": "crudl-graphql",
  "version": "0.3.0",
  "description": "crudl example express (graphql)",
  "main": "index.js",
  "scripts": {
    "browserify": "mkdir -p ../src/main/resources/assets/crudl && browserify . --extension=.jsx > ../src/main/resources/assets/crudl/admin.js",
    "watchify": "mkdir -p ../src/main/resources/assets/crudl && watchify . --extension=.jsx -o ../src/main/resources/assets/crudl/admin.js -v",
    "watchify-dev": "mkdir -p ../target/classes/assets/crudl && watchify . --extension=.jsx -o ../target/classes/assets/crudl/admin.js -v"
  },
  "browserify": {
    "presets": [
      "env",
      "react"
    ],
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env",
            "react"
          ],
          "plugins": [
            "syntax-class-properties",
            "transform-class-properties",
            "transform-object-rest-spread"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-syntax-class-properties": "^6.8.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.10.2",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^8.0.0",
    "browserify": "^16.1.1",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "@crudlio/crudl-connectors-base": "^0.1.2",
    "graphql": "^14.0.2",
    "lodash": "^4.17.5",
    "pluralize": "^5.0.0",
    "react": "^15.1.0",
    "uuid": "^3.0.1"
  }
}
